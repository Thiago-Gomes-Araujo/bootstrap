<h1 class=" mb-3 font-weight-normal teste" style="text-align: center"> Carreiras </h1>
<table class="table table-striped table-hover">
  <p style="color: green"><%= notice %></p>

  <thead>
    <tr>
      <th scope="col"> Título </th>
      <th scope="col"> Descrição </th>
      <th scope="col"> Ações </th>
    </tr>
  </thead>
  <tbody>
    <div id="contracts">
      <% @contracts.each do |contract| %>
        <%# <%= render contract %> 
        <p>

        <tr>
          <td> <%= contract.name %> </td>
          <td> <%= contract.description %> </td>
          <td> 
            <div class = "row align-items-start col-12">
              <div class="col-4">
                <%= link_to "Editar", edit_contract_path(contract), class: 'btn btn-secondary' %>
              </div>
              <div class="col-4 mb-3 font-weight-normal">
                <%= button_to "Excluir", contract, class: "btn btn-danger",
                data: { confirm: "Tem Certeza ?", turbo_confirm: "Tem Certeza ?"}, method: :delete %>
              </div>
            </div>
          </td>
        </tr>
        </p>
      <% end %>
    </div>
  </tbody>
</table>
<%= link_to "New contract", new_contract_path, class: 'btn btn-success' %>