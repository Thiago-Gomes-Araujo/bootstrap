              <div class="col-6">
                <%= link_to "Editar", edit_position_path(position), class: 'btn btn-secondary' %>
              </div>
              <div class="col-6">
                <%= button_to "Excluir", position, class: "btn btn-danger",
                data: { confirm: "Tem Certeza ?", turbo_confirm: "Tem Certeza ?"}, method: :delete %>
              </div>
            </div>
          </td>
        </tr>
    <% end %>
  </tbody>
</table>
