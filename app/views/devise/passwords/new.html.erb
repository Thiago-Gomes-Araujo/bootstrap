<h2 class="h3 mb-3 font-weight-normal teste" style="text-align: center"> Esqueceu sua Senha </h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true, input_html: { autocomplete: "email" }, placeholder: "E-mail" %>
  </div>

  <div class="form-actions">
        <%= f.button :submit, "Enviar Instruções", class: 'btn btn-primary form-control' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
