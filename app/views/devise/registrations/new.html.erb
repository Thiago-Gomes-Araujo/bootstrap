<h1 class="h3 mb-3 font-weight-normal teste" style="text-align: center"> Cadastra-se </h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

    <%= f.input :email,
                required: true, label: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, placeholder: "E-mail" %>
    <%= f.input :password,
                required: true, label: false,
                hint: ("#{@minimum_password_length} characters mÃ­nimos" if @minimum_password_length),
                input_html: { autocomplete: "new-password" }, placeholder: "Senha" %>
    <%= f.input :password_confirmation,
                required: true, label: false,
                input_html: { autocomplete: "new-password" }, placeholder: "Confirmar Senha" %>
 
  <div class="form-actions">
        <%= f.button :submit, "Cadastrar", class: 'btn btn-primary form-control' %>
  </div>
<% end %>

